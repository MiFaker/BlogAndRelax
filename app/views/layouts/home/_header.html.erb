<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to t("home.header.bar"), "#", class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to t("home.header.home"), "#" %></li>
        <li><%= link_to t("home.header.about"), "#" %></li>
        <li><%= link_to t("home.header.contact"), "#" %></li>
      </ul>
      <% unless user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"}, role: "button", aria: {haspopup: "true", expanded: "false"} do %>
              <%= t("home.header.sign_up") %>
              <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("home.header.sign_up"), "#", data: {toggle: "modal", target: "#modal_sign_up"} %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to t("home.header.forgot_password"), "#",
                  data: {toggle: "modal", target: "#modal_forgot_password"} %>
              </li>
            </ul>
          </li>
        </ul>
        <%= render "layouts/home/sign_in" %>
      <% else %>
        <%= render "layouts/home/user" %>
      <% end %>
    </div>
  </div>
</nav>
<%= render "layouts/home/modal_sign_up" %>
<%= render "layouts/home/modal_forgot_password" %>
