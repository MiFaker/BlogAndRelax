<div class="container">
  <div class="modal fade" id="modal_forgot_password" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="text-center"><%= t "user.reset_password_screen.title" %></h4>
        </div>
        <div class="modal-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name),
            html: { method: :post, class: "login-form" }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                placeholder: t("user.reset_password_screen.placeholder"), class: "form-control", type: "text" %>
            </div>
            <div class="form-group text-right">
              <%= f.submit t("user.reset_password_screen.send"), class: "btn btn-primary" %>
              <%= link_to t("home.header.close"), "#", data: {dismiss: "modal"}, class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
