<div class="container">
  <div class="modal fade" id="modal_sign_up" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="text-center"><%= t "user.login_screen.sign_up" %></h4>
        </div>
        <div class="modal-body">
          <%= form_for(resource, as: resource_name,
          url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                placeholder: t("user.login_screen.fields.email"),
                class: "form-control", type: "text" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true,
                placeholder: t("user.login_screen.fields.password"),
                class: "form-control", type: "password" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autofocus: true,
                placeholder: t("user.login_screen.fields.password_confirmation"),
                class: "form-control", type: "password" %>
            </div>
            <div class="form-group text-right">
              <%= f.submit t("user.login_screen.sign_up"), class: "btn btn-primary" %>
              <%= link_to t("home.header.close"), "#", data: {dismiss: "modal"}, class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
