<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default devise-area">
      <div class="panel-heading">
        <h2 class="text-center"><%= t "user.reset_password_screen.title" %></h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name),
          html: { method: :post, class: "login-form" }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true,
              placeholder: t("user.reset_password_screen.placeholder"), class: "form-control", type: "text" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit t "user.reset_password_screen.send", class: "form-control" %>
          </div>
        <% end %>
      </div>
      <div class="text-center links">
        <%= link_to t("user.login_screen.sign_in"), new_user_session_path %>
        <%= t "user.or" %>
        <%= link_to t("user.registration_screen.sign_up"), new_user_registration_path %>
      </div>
    </div>
  </div>
 </div>
