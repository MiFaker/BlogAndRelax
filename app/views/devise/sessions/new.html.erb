<div>
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default devise-area">
      <div class="panel-heading">
        <h2 class="text-center"><%= t "user.login_screen.bar" %></h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),
          html: {class: "login-form"}) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true,
              placeholder: t("user.login_screen.fields.email"), class: "form-control", type: "text" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autofocus: true,
              placeholder: t("user.login_screen.fields.password"), class: "form-control", type: "password" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit t("user.login_screen.sign_in"), class: "form-control" %>
          </div>
        <% end %>
      </div>
      <div class="text-center links">
        <%= link_to t("user.login_screen.forgot_password"), new_user_password_path %>
        <%= t "user.or" %>
        <%= link_to t("user.registration_screen.sign_up"), new_user_registration_path %>
      </div>
    </div>
  </div>
</div>
