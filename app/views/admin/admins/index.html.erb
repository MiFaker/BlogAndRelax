<div ng-controller="AdminListController" ng-init="refreshAdminList()" id= "account-list" class="container">
  <div class="row">
    <h2 class="text-center"><%= t "admin.account_list.title" %></h2>
  </div>
  <div class="pull-right" id="paginate-list">
    <%= ng_pagination("total_items", "params.page", "params.limit", "refreshAdminList()") %>
  </div>
  <div class="row">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr class="title">
          <th><%= t "admin.account_list.id" %></th>
          <th><%= t "admin.account_list.name" %></th>
          <th><%= t "admin.account_list.email" %></th>
          <th><%= t "admin.account_list.phone" %></th>
          <th><%= t "admin.account_list.memo" %></th>
        </tr>
      </thead>
      <tbody id="admin-list">
        <tr ng-repeat="admin in admins track by admin.id">
          <td class="text-center" ng-bind="::admin.id"></td>
          <td ng-bind="::admin.first_name"></td>
          <td ng-bind="::admin.email"></td>
          <td ng-bind="::admin.phone"></td>
          <td ng-bind="::admin.memo"></td>
        </tr>
      </tbody>
    </table>
  </div>
